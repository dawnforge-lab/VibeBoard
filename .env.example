# ============================================
# NEXTAUTH_URL=http://localhost:3000
# NEXTAUTH_SECRET=your-secret-key-here

# ============================================
# Payments (Phase 2)
# ============================================
# Stripe (Web)
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx
# STRIPE_SECRET_KEY=sk_test_xxx
# STRIPE_WEBHOOK_SECRET=whsec_xxx

# RevenueCat (Mobile - Phase 2)
# REVENUECAT_API_KEY=xxx
# REVENUECAT_ANDROID_API_KEY=xxx
# REVENUECAT_IOS_API_KEY=xxx

# ============================================
# AI Integration (Phase 2)
# ============================================
# OpenAI_API_KEY=sk-proj-xxx
# OPENAI_ORG_ID=org-xxx

# ============================================
# Analytics & Monitoring (Phase 2)
# ============================================
# PostHog
# NEXT_PUBLIC_POSTHOG_KEY=phc_xxx
# NEXT_PUBLIC_POSTHOG_HOST=https://posthog.vibeboard.app

# Sentry
# NEXT_PUBLIC_SENTRY_DSN=https://xxx@sentry.io/yyy
# SENTRY_AUTH_TOKEN=xxx
# SENTRY_ORG=vibeboard
# SENTRY_PROJECT=web

# ============================================
# Railway (Deployment)
# ============================================
# RAILWAY_TOKEN=xxx
# RAILWAY_PROJECT_ID=xxx
# RAILWAY_SERVICE_ID=xxx

# ============================================
# Feature Flags (Phase 2)
# ============================================
# NEXT_PUBLIC_ENABLE_AI_SUGGESTIONS=false
# NEXT_PUBLIC_ENABLE_CLOUD_SYNC=false
# NEXT_PUBLIC_ENABLE_MONETIZATION=false
# NEXT_PUBLIC_MAINTENANCE_MODE=false

# ============================================
# Admin Panel (Phase 2 - Epic 5.5)
# ============================================
# ADMIN_EMAIL=admin@vibeboard.app
# ADMIN_PASSWORD=change-me-in-production

# ============================================
# Mobile App (Phase 2)
# ============================================
# EXPO_PUBLIC_APP_NAME=VibeBoard
# EXPO_PUBLIC_API_URL=https://api.vibeboard.app

# ============================================
# Development
# ============================================
# Enable Next.js telemetry (optional)
