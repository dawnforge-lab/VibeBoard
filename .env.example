# ============================================
# VibeBoard â€” Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control!

# ============================================
# Application
# ============================================
NEXT_PUBLIC_APP_NAME=VibeBoard
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_VERSION=1.0.0

# ============================================
# Supabase (Database & Authentication)
# ============================================
# Get these from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://xxxxxxxxxxxxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
DATABASE_URL=postgresql://postgres:password@db.xxxxxxxxxxxxx.supabase.co:5432/postgres

# ============================================
# Stripe (Payment Processing - Web)
# ============================================
# Get these from: https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Product IDs
STRIPE_PRO_MONTHLY_PRICE_ID=price_...
STRIPE_PRO_ANNUAL_PRICE_ID=price_...

# ============================================
# RevenueCat (In-App Purchases - Mobile)
# ============================================
# Get these from: https://app.revenuecat.com
EXPO_PUBLIC_REVENUECAT_API_KEY=your_revenuecat_api_key
EXPO_PUBLIC_REVENUECAT_APPLE_API_KEY=appl_xxx
EXPO_PUBLIC_REVENUECAT_GOOGLE_API_KEY=goog_xxx

# ============================================
# OpenAI (AI Recommendations - Phase 2)
# ============================================
# Get this from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-...
OPENAI_ORG_ID=org-...

# Model selection
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=150
OPENAI_TEMPERATURE=0.7

# ============================================
# PostHog (Analytics)
# ============================================
# Get these from: https://app.posthog.com/project/settings
NEXT_PUBLIC_POSTHOG_KEY=phc_...
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com
# Or self-hosted:
# NEXT_PUBLIC_POSTHOG_HOST=https://posthog.vibeboard.app

# ============================================
# Sentry (Error Tracking)
# ============================================
# Get these from: https://sentry.io/settings/projects/
NEXT_PUBLIC_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
SENTRY_AUTH_TOKEN=sntrys_...
SENTRY_ORG=your-org
SENTRY_PROJECT=vibeboard

# ============================================
# Railway (Deployment)
# ============================================
# Get this from: https://railway.app/account/tokens
RAILWAY_TOKEN=your_railway_token
RAILWAY_PROJECT_ID=your_project_id
RAILWAY_SERVICE_ID=your_service_id

# ============================================
# Build & Environment
# ============================================
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1

# ============================================
# Admin Panel (Phase 2)
# ============================================
# Initial admin user (for seeding)
ADMIN_EMAIL=admin@vibeboard.app
ADMIN_PASSWORD=change_me_in_production

# ============================================
# Feature Flags (Development Overrides)
# ============================================
# Override feature flags for local development
DEV_ENABLE_AI_SUGGESTIONS=true
DEV_ENABLE_MARKETPLACE=false
DEV_ENABLE_KEYBOARD_EXTENSION=false

# ============================================
# Optional: Third-Party Services
# ============================================
# Email (SendGrid, Resend, etc.)
# EMAIL_API_KEY=your_email_api_key
# EMAIL_FROM=noreply@vibeboard.app

# SMS (Twilio, etc.)
# TWILIO_ACCOUNT_SID=ACxxx
# TWILIO_AUTH_TOKEN=xxx
# TWILIO_PHONE_NUMBER=+1234567890

# Cloud Storage (for user uploads - Phase 3)
# AWS_ACCESS_KEY_ID=xxx
# AWS_SECRET_ACCESS_KEY=xxx
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=vibeboard-uploads

# ============================================
# Security
# ============================================
# JWT Secret (auto-generated by Supabase, but can override)
# JWT_SECRET=your-super-secret-key-change-in-production

# Session Secret (for admin panel)
# SESSION_SECRET=your-session-secret-min-32-chars

# ============================================
# Rate Limiting
# ============================================
# Rate limit config (requests per minute)
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# ============================================
# CORS (if needed for custom domains)
# ============================================
# ALLOWED_ORIGINS=https://vibeboard.app,https://www.vibeboard.app

# ============================================
# Monitoring & Logging
# ============================================
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Enable debug mode
# DEBUG=true

# ============================================
# End of Configuration
# ============================================
